<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:text="انتخاب تم "
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/theme1"
                android:layout_width="97dp"
                android:layout_height="44dp"
                android:text="تم 1" />

            <RadioButton
                android:id="@+id/theme2"
                android:layout_width="97dp"
                android:layout_height="44dp"
                android:layout_marginRight="10dp"
                android:text="تم 2" />

        </RadioGroup>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="40dp"
            android:text="چتد عکس در صفحه اصلی داشته باشیم؟"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/number1"
                android:layout_width="97dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/number2"
                android:layout_width="91dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/number3"
                android:layout_width="91dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/number4"
                android:layout_width="91dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/number5"
                android:layout_width="91dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/number6"
                android:layout_width="91dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="16sp" />

        </RadioGroup>


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="@color/black" />


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:text="اطلاعات بانکی نمایش داده نشود" />
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:minHeight="40dp"
            android:text="ویرایش پروفایل"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEditBankInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="40dp"
            android:text="ویرایش اطلاعات بانکی"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:layout_marginBottom="30dp"
            android:text="ورود کاربر جدید "
            app:cornerRadius="30dp" />




    </LinearLayout>
</ScrollView>